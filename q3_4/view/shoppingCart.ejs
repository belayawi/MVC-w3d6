<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express Cart Page</title>
    <link rel="stylesheet" href="../css//style.css">
</head>
<body>
    <div id="container">
        <%-include('./header.ejs') %>
        <div id="body">
            <% for(let x in items) {%>
                <div id="lis">
                    <div id="cit">
                        <h2><%=items[x].name %></h2>
                        <h2><%=items[x].price %></h2>
                    </div>
                </div>
                <%}%>

                <%
                let sum =parseInt(0);
                for(a of items){
                    sum += a.price;
                }
                %>
                <h2>Total:<%=parseInt(sum)%></h2>
        </div>
        <%-include('./footer.ejs') %>
    </div>
</body>
</html>